import React from 'react';

function TextInput({ label, id, value, onChange, type = 'text', required }) {
  return (
    <div>
      <label htmlFor={id}>{label}</label>
      <input
        type={type}
        id={id}
        name={id}
        value={value}
        onChange={onChange}
        required={required}
      />
    </div>
  );
}

export default TextInput;
